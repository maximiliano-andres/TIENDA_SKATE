<style>
    .error-container {
        background-color: rgba(255, 255, 255, 0.7);
        border: 1px solid #f5c800;
        padding: 15px 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
        max-width: 350px;
        margin: 20px auto;
    }

    .error-message {
        color: #f5c800;
        font-weight: bold;
        font-size: 16px;
        margin: 0;
    }

    .product_section {
    padding: 60px 0;
    background-image: url(../../assets/images/banner-skate-2.jpg);
    background-size: cover; /* Asegura que la imagen cubra toda el área */
    background-repeat: no-repeat; /* Evita que la imagen se repita */
    background-position: center; /* Centra la imagen */
}

    .heading_container h2 {
        font-size: 42px;
        font-weight: bold;
        margin-bottom: 40px;
        color: #c600f8;
    }

    .form_container {
        background: #00000088;
        padding: 30px 40px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(8, 8, 0, 0.658);
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
    }

    .btn_box {
        text-align: center;
    }

    .btn_box button {
        background: #f5c800;
        color: #000000;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .btn_box button:hover {
        background: #d4a200;
    }
</style>

<%- include('layouts/header.ejs'); -%>
<!-- product section -->
<section class="product_section layout_padding">
    <div class="container text-center">
        <div class="heading_container heading-section">
            <h4>Registrar Nuevo Producto</h4>

            <% if (error) { %>
                <div class="error-container text-center">
                    <p class="error-message">
                        <%= error %>
                    </p>
                </div>
            <% } %>
        </div>
        <div class="container">
            <div class="col-md-6 mx-auto">
                <div class="form_container">
                    <form action="/tienda_frijolitox/nuevo_producto" method="POST" enctype="multipart/form-data">
                        <div>
                            <input type="text" class="form-control" name="marca" placeholder="Marca" required />
                        </div>
                        <div>
                            <input type="text" class="form-control" name="modelo" placeholder="Modelo" required />
                        </div>
                        <div>
                            <textarea class="form-control" name="descripcion" placeholder="Descripción" required></textarea>
                        </div>
                        <div>
                            <input type="number" step="0.01" class="form-control" name="precio" placeholder="Precio" required />
                        </div>
                        <div>
                            <select class="form-control" name="categoria" required>
                                <option value="" disabled selected>Seleccionar categoría</option>
                                <option value="SKATEBOARDS">SKATEBOARDS</option>
                                <option value="SURFSKATES">SURFSKATES</option>
                                <option value="PENNY">PENNY</option>
                                <option value="SKATES">SKATES</option>
                                <option value="SCOOTERS">SCOOTERS</option>
                                <option value="PROTECCIONES">PROTECCIONES</option>
                                <option value="ROPA">ROPA</option>
                            </select>
                        </div>
                        <div>
                            <input type="number" class="form-control" name="stock" placeholder="Stock" required />
                        </div>
                        <div>
                            <input type="file" class="form-control" name="imagen" placeholder="URL de la imagen" />
                        </div>
                        <div class="btn_box">
                            <button type="submit">Registrar Producto</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end product section -->

<%- include('layouts/footer.ejs'); -%>
