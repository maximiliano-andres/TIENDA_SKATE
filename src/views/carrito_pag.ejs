<%- include('layouts/header.ejs'); -%> 
<body>

<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-content">

            <div class="gaming-library">
                <div class="col-lg-12">
                  <div class="heading-section">
                    <h4><em>Mi</em> Carrito</h4>
                  </div>
                  <% if (carrito.length > 0) { %>
                    <div class="item">
                            <% carrito.forEach(item => { %>
                              <ul>
                            <li><img src="../../assets/images/productos/<%= item.imagen %>" alt="<%= item.nombre %>" class="templatemo-item"></li>
                            <li><h4> <%= item.nombre %> </h4><span>PRODUCTO</span></li>
                            
                            <li><h4> <%= item.precio %> </h4><span>PRECIO</span></li>
                            <li><h4> <%= item.cantidad %> </h4><span>CANTIDAD</span></li>

                            <li><div class="buttons">
                              <form action="/tienda_frijolitox/eliminar_carrito/<%= item._id %>" method="POST" style="display:inline;">
                                  <input type="hidden" name="_method" value="DELETE">
                                  <button type="submit" class="boton_nuevo mx-2">Eliminar</button>
                              </form>
                          </div></li><br><br>
                        </ul>
                          <% }); %>
                        <% } else { %>
                          <div class="heading-section">
                            <h4>No hay items en el carrito <i class="fa fa-cart-shopping"></i> </h4>

                          </div>
                            
                        <% } %>
                    </div>
                    
                    
                </div>
                
              </div>
               <!-- ***** Other Start ***** -->
          <div class="other-games">
            <div class="row">
              <div class="col-lg-12">
                <div class="heading-section">
                  <h4><em>Productos </em> Recomendados</h4>
                </div>
              </div>
              <% productos_recomendados.forEach(producto => { %>
              <div class="col-lg-6">
                <div class="item">
                  <img src="../../assets/images/productos/<%= producto.imagen %>" alt="" class="templatemo-item">
                  <h4><%= producto.modelo %></h4><span><%= producto.marca %></span>
                  <ul>
                    <li><i class="fa fa-dollar"></i> <%= producto.precio %></li>
                    <li><i class="fa fa-boxes-stacked"></i> <%= producto.stock %></li>
                    <a href="/tienda_frijolitox/producto/<%= producto._id %>"><i class="fa fa-bag-shopping"></i> Ver</a>
                  </ul>
                </div>
              </div>
              <% }); %>
            </div>
              
          </div>
          <!-- ***** Other End ***** -->
        </body>
          <%- include('layouts/footer.ejs'); -%>

