          <!-- ***** Banner Start ***** -->
<div class="main-banner">
  <div class="row">
      <div class="col-lg-7">
          <div class="header-text">
              <% if (usuario) { %>
                  
                  <h4><em>Bienvenido a FRIJOLITOX STORE</em>. En Nuestra tienda encuentra lo mejor en deportes urbanos</h4>
                  
              <% } else { %>
