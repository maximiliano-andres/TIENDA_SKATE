

<%- include('layouts/header.ejs'); -%>


<body>


  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-content">

          <!-- ***** Details Start ***** -->
          <div class="game-details">
            <div class="row">
              <div class="col-lg-12">
                <h2><%= producto.marca %> <%= producto.modelo %></h2>
              </div>
              <div class="col-lg-12">
                <div class="content">
                  <div class="row">
                    
                    <div class="col-lg-4">
                      <img src="../../assets/images/productos/<%= producto.imagen %>" alt="" style="border-radius: 23px; margin-bottom: 30px;">
                    </div>
                    <div class="col-lg-12">
                      <p><p>
                    </div>
                    <div class="col-lg-6">
                      <div class="left-info">
                        <div class="left">
                          <h4>Descripcion</h4><br>
                          <h4><%= producto.descripcion %></h4>
                        </div>
                        <ul>
                          <li><i class="fa fa-star"></i></li><br>
                          
                        </ul>
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="right-info">
                        <ul>
                          <h4>Modelo : <%= producto.modelo %></h4><br>
                          <h4>Precio : $ <%= producto.precio %></h4><br>
                          <li><i class="fa fa-shop"></i> <%= producto.marca %></li>
                          <li><i class="fa fa-star"></i> <%= producto.categoria %></li>
                          <li><i class="fa fa-boxes-stacked"></i> <%= producto.stock %></li>
                        </ul>
                      </div>
                    </div>
                    <div class="col-lg-12">
                      <div class="main-border-button">
                        <a href="/tienda_frijolitox/agregar_carrito/<%= producto._id %>">Agregar al carrito</a>
                        <a href="/tienda_frijolitox/productos/<%= producto.categoria %>">Ver Productos Relacionados</a>
                        <% if (usuario == 'admin') { %>
                          <a href="/productos/update_producto/<%= producto._id %>">Actualizar Producto</a>
                          <a href="/tienda_frijolitox/eliminar/<%= producto._id %>">Eliminar</a>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- ***** Details End ***** -->

          <!-- ***** Other Start ***** -->
          <div class="other-games">
            <div class="row">
              <div class="col-lg-12">
                <div class="heading-section">
                  <h4><em><%= producto.categoria %></em> Recomendados</h4>
                </div>
              </div>
              <% recomendacion.forEach(producto => { %>
              <div class="col-lg-6">
                <div class="item">
                  <img src="../../assets/images/productos/<%= producto.imagen %>" alt="" class="templatemo-item">
                  <h4><%= producto.modelo %></h4><span><%= producto.marca %></span>
                  <ul>
                    <li><i class="fa fa-dollar"></i> <%= producto.precio %></li>
                    <li><i class="fa fa-boxes-stacked"></i> <%= producto.stock %></li>
                    <a href="<%= producto._id %>"><i class="fa fa-bag-shopping"></i> Ver</a>
                  </ul>
                </div>
              </div>
              <% }); %>
            </div>
            <div class="col-lg-12 text-center">
              <div class="main-button">
                <a href="/tienda_frijolitox/productos/<%= producto.categoria %>">Ver todos</a>
              </div>
            </div>
          </div>
          <!-- ***** Other End ***** -->

        </div>
      </div>
    </div>
  </div>
  
  <%- include('layouts/footer.ejs'); -%>

  </body>

</html>
