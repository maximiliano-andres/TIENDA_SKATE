<style>
    /* Estilos */
    .error-container {
        background-color: rgba(255, 255, 255, 0.7);
        border: 1px solid #f5c800;
        padding: 15px 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
        max-width: 350px;
        margin: 20px auto;
    }

    .error-message {
        color: #f5c800;
        font-weight: bold;
        font-size: 16px;
        margin: 0;
    }

    .product_section {
        padding: 60px 0;
        background-image: url(../../assets/images/banner-skate-4.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }

    .heading_container h2 {
        font-size: 42px;
        font-weight: bold;
        margin-bottom: 40px;
        color: #c600f8;
    }

    .form_container {
        background: #00000088;
        padding: 30px 40px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(8, 8, 0, 0.658);
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
    }

    .btn_box {
        text-align: center;
    }

    .btn_box button {
        background: #f5c800;
        color: #000000;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .btn_box button:hover {
        background: #d4a200;
    }
    
    .img-preview {
        width: 100%;
        max-width: 300px;
        height: auto;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }
</style>

<%- include('layouts/header.ejs'); -%>
<!-- product section -->
<section class="product_section layout_padding">
    <div class="container text-center">
        <div class="heading_container ">
            <div class="heading-section">
                <h4>Actualizar <br> <%= producto.marca %> <%= producto.modelo %></h4>
            </div>

            
        </div>
        <div class="container">
            <div class="col-md-6 mx-auto">
                <div class="form_container">
                    <form action="/productos/update_producto/<%= producto.id %>" method="POST" enctype="multipart/form-data">
                        <div>
                            <input type="text" class="form-control" name="marca" placeholder="Marca" value="<%= producto.marca %>" required />
                        </div>
                        <div>
                            <input type="text" class="form-control" name="modelo" placeholder="Modelo" value="<%= producto.modelo %>" required />
                        </div>
                        <div>
                            <textarea class="form-control" name="descripcion" placeholder="Descripción" required><%= producto.descripcion %></textarea>
                        </div>
                        <div>
                            <input type="number" step="0.01" class="form-control" name="precio" placeholder="Precio" value="<%= producto.precio %>" required />
                        </div>
                        <div>
                            <select class="form-control" name="categoria" required>
                                <option value="" disabled>Seleccionar categoría</option>
                                <option value="SKATEBOARDS" <%= producto.categoria === 'SKATEBOARDS' ? 'selected' : '' %>>SKATEBOARDS</option>
                                <option value="SURFSKATES" <%= producto.categoria === 'SURFSKATES' ? 'selected' : '' %>>SURFSKATES</option>
                                <option value="PENNY" <%= producto.categoria === 'PENNY' ? 'selected' : '' %>>PENNY</option>
                                <option value="SKATES" <%= producto.categoria === 'SKATES' ? 'selected' : '' %>>SKATES</option>
                                <option value="SCOOTERS" <%= producto.categoria === 'SCOOTERS' ? 'selected' : '' %>>SCOOTERS</option>
                                <option value="PROTECCIONES" <%= producto.categoria === 'PROTECCIONES' ? 'selected' : '' %>>PROTECCIONES</option>
                                <option value="ROPA" <%= producto.categoria === 'ROPA' ? 'selected' : '' %>>ROPA</option>
                            </select>
                        </div>
                        <div>
                            <input type="number" class="form-control" name="stock" placeholder="Stock" value="<%= producto.stock %>" required />
                        </div>
                        <div>
                            <input type="file" class="form-control" name="imagen" />
                            <img src="../../assets/images/productos/<%= producto.imagen %>" alt="<%= producto.imagen %>" class="img-preview">
                        </div>
                        <div class="btn_box">
                            <button type="submit">Actualizar Producto</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end product section -->

<%- include('layouts/footer.ejs'); -%>
