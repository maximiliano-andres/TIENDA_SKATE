
<%- include('layouts/header.ejs'); -%>
<body>


  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-content">

          <!-- ***** Featured Games Start ***** -->
<div class="row">
  <div class="col-lg-8">
    <div class="featured-games header-text">
      <div class="heading-section">
        <h4><em>Categorias</em> De Productos</h4>
      </div>
      <div class="owl-features owl-carousel">
        <% for (let categoria of lista_productos) { %>
        <div class="item">
          <div class="thumb">
            <img src="../../assets/images/Categorias/<%= categoria %>.jpg" alt="">
            <div class="hover-effect">
              <a href="productos/<%= categoria %>"><h6>ver categoria</h6></a>
            </div>
          </div>
          <h4><%= categoria %><br><span>Disponibles</span></h4>         
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="top-downloaded">
        <div class="heading-section">
            <h4><em>Productos</em> Nuevos</h4>
        </div>
        <ul>
            <% productos_recientes.forEach(producto => { %>
            <li>
                <img src="../../assets/images/productos/<%= producto.imagen %>" alt="<%= producto.modelo %>" class="templatemo-item" style="border-radius: 23px; width: 70px; height: 70px;">
                <h4><%= producto.marca %></h4>
                <h6><%= producto.categoria %></h6>
                <h6>$ <%= producto.precio %></h6>
                
                <div class="download">
                    <a href="producto/<%= producto._id %>"><i class="fa fa-shopping-bag"></i></a>
                </div>
            </li>
            <% }); %>
        </ul>
        
    </div>
</div>
<!-- ***** Featured Games End ***** -->

<!-- ***** Most Popular Start ***** -->
<div class="most-popular">
  <div class="row">
    <div class="col-lg-12">
      <div class="heading-section">
        <h4><em>Nuestros</em> Productos</h4>
      </div>
      <div class="row">
        <% todos_productos.forEach((producto, index) => { %>
          <div class="col-lg-3 col-sm-6">
            <div class="item">
              <a href="producto/<%= producto._id %>"><img src="../../assets/images/productos/<%= producto.imagen %>" alt="<%= producto.modelo %>"></a>
              <h4><%= producto.modelo %><br><span><%= producto.categoria %></span></h4>
              <p><%= producto.descripcion %></p>

                <li><h4> <i class="fa fa-dollar"></i> <%= producto.precio %></h4></li>
                <li><a href="/tienda_frijolitox/agregar_carrito/<%= producto._id %>"> <i class="fa fa-shopping-cart"></i> Agregar Al Carrito</a></li>
                <li><a href="producto/<%= producto._id %>"><i class="fa fa-bag-shopping"></i> Ver</a></li>
              
              
            </div>
          </div>
          <% if ((index + 1) % 4 === 0 && index + 1 < todos_productos.length) { %>
            </div>
            
            <div class="row">
          <% } %>
        <% }); %>
      </div>
    </div>
  </div>
</div>
<!-- ***** Most Popular End ***** -->

